<%- include ('../header.ejs') %>
<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-3">
          <div class="dash-left">
            <ul>
              <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
              <li><a href="/admin/blog" class="active">Blogs</a></li>
              <li><a href="/admin/category">Categories</a></li>
              <li><a href="/admin/contact">Contact</a></li>
              <li><a href="/admin/about">About</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1>Blogs</h1>
              </div>
              <div class="dash-nav">
                <button
                  type="button"
                  class="btn btn-success"
                  data-toggle="modal"
                  data-target="#exampleModal"
                >
                  Add Blog
                </button>
              </div>
            </div>
            <table class="table table-bordered table-striped">
              <tr>
                <th>S.No</th>
                <!-- <th>Image</th> -->
                <th>Title</th>
                <!-- <th>Category</th> -->
                <th>Category</th>
                <!-- <th>Action</th> -->
              </tr>

              <tr>
                <td><%= b._id %></td>
                <td><%= b.title %></td>
                <td><%= b.category %></td>
                <td>
                  <!-- <a href="/admin/blogview/<%= b._id %>" class="btn btn-info"
                    >View</a
                  >
                  <a href="#" class="btn btn-danger">edit</a>
                  <a href="#" class="btn btn-success">delete</a>
                </td> -->
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="post" action="/bloginsert">
            <!-- <div class="form-group form-row">
                        <label class="col-md-3 required">Upload Image *</label>
                        <div class="col-md-9">
                          <input type="file"  name="filename" class="form-control" formControlName="image">
                        </div>
                    </div> -->
            <div class="form-group form-row">
              <label class="col-md-3 required">Title *</label>
              <div class="col-md-9">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Title"
                  required
                  name="title"
                />
              </div>
            </div>
            <!-- <div class="form-group form-row">
                      <label class="col-md-3">Upload Image</label>
                      <div class="col-md-9">
                        <input type="file" id="image" />
                      </div>
                    </div> -->
            <div class="form-group form-row">
              <label class="col-md-3 required">Category *</label>
              <div class="col-md-9">
                <textarea
                  name="category"
                  rows="5"
                  class="form-control"
                  placeholder="category"
                  required
                  name="category"
                ></textarea>
              </div>
            </div>

            <div class="form-group form-row">
              <label class="col-md-3"></label>
              <div class="col-md-9">
                <!-- <button type="button" class="btn btn-secondary"
                            data-dismiss="modal">close</button> -->
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include ('../footer.ejs') %>
