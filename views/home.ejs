<section class="featured-blog mtb-40">
  <div class="container">
    <div class="row" style="margin-top: 21px">
<% d.forEach ((item)=>{ %>

      <div class="col-md-4">
        <div class="blog-box ">
          <img src="<%= item.image.url %>" width="280" height="290"  alt="blog1"  class="blog-image"/>

          <h3 class="title"><%= item.title %></h3>
          <p> <%= item.createdAt.toLocaleDateString() %></p>
          <p><%= item.description.slice(0,100) %></p>
          <a href="/blogdetail/<%= item._id %>" class="btn btn-danger">Read more...</a>
        </div>
      </div>
      <% }) %>


    </div>
  </div>
</section>

